<apex:page controller="RF_PublicSiteController" docType="html-5.0" id="RF_PublicSiteLeadForm" showHeader="false">
    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8" name="viewport" content="width=device-width, initial-scale=1"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/jquery/jquery-3.2.1.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/js/main.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/animsition/js/animsition.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/bootstrap/js/popper.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/bootstrap/js/bootstrap.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/select2/select2.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/daterangepicker/moment.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/daterangepicker/daterangepicker.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/countdowntime/countdowntime.js')}"/>

    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/bootstrap/css/bootstrap.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/fonts/font-awesome-4.7.0/css/font-awesome.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/fonts/Linearicons-Free-v1.0.0/icon-font.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/animate/animate.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/css-hamburgers/hamburgers.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/animsition/css/animsition.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/select2/select2.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/vendor/daterangepicker/daterangepicker.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/css/util.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/css/main.css')}"/>

    <div class="container-contact100">
        <div class="contact100-map" style="background-color: white;"></div>
        <div class="wrap-contact100" style="border-style: outset; border-color: black;">
            <div class="contact100-form-title" style="background-image: url({!URLFOR($Resource.RF_PublicSiteLeadNewForm, '/ContactFrom_v15/images/bg-01.jpg')});">
                <span class="contact100-form-title-1">
                    {!$Label.RF_PublicSiteLeadNewContactUsLabel}
                </span>

                <span class="contact100-form-title-2">
                    {!$Label.RF_PublicSiteLeadNewTextEncourageLabel}
                </span>
            </div>

            <form class="contact100-form validate-form" action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">
                <input type="hidden" name="oid" value="{!defaultLeadOwnerId}" />
                <input type="hidden" name="retURL" value="https://rent-flat-developer-edition.eu25.force.com"/>
                <input type="hidden" id="lead_source" name="lead_source" value="Web" />

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <span class="label-input100">{!$ObjectType.Lead.fields.FirstName.Label}</span>
                    <input id="first_name" class="input100" type="text" name="first_name" required="true"/>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <span class="label-input100">{!$ObjectType.Lead.fields.LastName.Label}</span>
                        <input id="last_name" class="input100" type="text" name="last_name" required="true"/>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                    <span class="label-input100">{!$ObjectType.Lead.fields.Email.Label}</span>
                        <input id="email" class="input100" type="text" name="email" required="true"/>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Phone is required">
                    <span class="label-input100">{!$ObjectType.Lead.fields.Phone.Label}</span>
                        <input id="phone" class="input100" type="text" name="phone" required="true"/>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Phone is required">
                    <span class="label-input100">{!$ObjectType.Lead.fields.Country.Label}</span>
                        <input id="country" class="input100" type="text" name="country" required="true"/>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Phone is required">
                    <span class="label-input100">{!$ObjectType.Lead.fields.Company.Label}</span>
                        <input id="company" class="input100" type="text" name="company" required="true"/>
                    <span class="focus-input100"></span>
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn" style="background: #57b846;">
                            <span>
                                Submit
                                <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                            </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
	</script>
</apex:page>
